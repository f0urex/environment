!! Copy Paste & Other Extensions
!URxvt.perl-ext-common: default,clipboard,url-select,keyboard-select,resize-font,-confirm-paste,tabbed
!URxvt.perl-ext-common: default,clipboard,url-select,keyboard-select,resize-font,-confirm-paste
!URxvt.perl-ext-common: default,clipboard,url-select,keyboard-select,resize-font
!URxvt.perl-ext-common: default,clipboard,url-select,keyboard-select
URxvt.perl-ext-common: default,url-select,keyboard-select,-confirm-paste
!URxvt.perl-ext-common: default,keyboard-select
!URxvt.clipboard.autocopy: false
!URxvt.copyCommand: xclip -i -selection clipboard
!URxvt.pasteCommand: xclip -o -selection clipboard
!URxvt.keysym.C-S-C: perl:clipboard:copy
!URxvt.keysym.C-S-V: perl:clipboard:paste
!URxvt.keysym.M-C-v: perl:clipboard:paste_escaped
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search
URxvt.keyboard-select.clipboard: true

! Bind Ctrl + Shift + V to paste from clipboard
URxvt.keysym.Shift-Control-V: eval:paste_clipboard

! Bind Ctrl + Shift + C to copy to clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard

!! Clickable URLs
!! needed matcher extension
!URxvt.url-launcher: /usr/bin/xdg-open
!URxvt.matcher.button: 1
!URxvt.matcher.rend.0: Uline Bold fg5 

!! Yankable URLs (no mouse)
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: /usr/bin/xdg-open
URxvt.url-select.underline: true
URxvt.colorUL: #4682B4

!! Simple tabs
!! to enabled add extension tabbed
URxvt.tabbed.tabbar-fg: 2
URxvt.tabbed.tabbar-bg: 0
URxvt.tabbed.tab-fg: 3
URxvt.tabbed.tab-bg: 0

!! Changing font size on the fly
URxvt.iso14755: false
URxvt.iso14755_52: false
URxvt.keysym.C-Down:  resize-font:smaller
URxvt.keysym.C-Up:    resize-font:bigger
